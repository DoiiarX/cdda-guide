{
  "name": "svelte-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "GPL-3.0-only",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "validate": "svelte-check && tsc --noEmit",
    "test": "node fetch-fixtures.js && npm run lint && npm run validate && jest src",
    "test:latest": "node fetch-fixtures.js latest && npm run validate && jest src",
    "test:watch": "npm run test -- --watch",
    "update-test-data": "node fetch-fixtures.js latest",
    "transifex-push": "txjs-cli push dist",
    "deploy": "npm run build && gh-pages -d dist",
    "lint": "prettier -c .",
    "lint:fix": "prettier -w .",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@fontsource/unifont": "^4.5.5",
    "@sentry/browser": "^7.2.0",
    "@sentry/tracing": "^7.2.0",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.30",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/svelte": "^3.0.3",
    "@transifex/cli": "^4.2.4",
    "@transifex/native": "^4.2.4",
    "@tsconfig/svelte": "^2.0.1",
    "@types/gettext.js": "^1.0.0",
    "@types/jest": "^28.1.3",
    "@types/lodash.throttle": "^4.1.7",
    "@types/node": "^14.14.31",
    "@types/node-fetch": "^2.5.8",
    "@types/requestidlecallback": "^0.3.4",
    "ajv": "^8",
    "babel-jest": "^28.1.1",
    "fuzzysort": "^2.0.1",
    "gettext.js": "nornagon/gettext.js#bdf27db",
    "gh-pages": "^3.1.0",
    "husky": "^7.0.4",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "lint-staged": "^12.3.2",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.1",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.4.0",
    "svelte": "^3.44.0",
    "svelte-check": "^2.2.7",
    "svelte-jester": "^1.3.0",
    "svelte-preprocess": "^4.9.8",
    "ts-jest": "^28.0.5",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "typescript-json-schema": "^0.50.0",
    "vite": "^2.9.9",
    "vite-plugin-environment": "^1.1.2",
    "vite-plugin-pwa": "^0.12.0"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true,
          "compilerOptions": {
            "dev": false
          }
        }
      ],
      "^.+\\.ts$": "ts-jest",
      "^.+\\.mjs$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "svelte"
    ]
  },
  "lint-staged": {
    "*.{js,ts,mjs,svelte,html}": [
      "prettier -w",
      "svelte-check",
      "tsc --noEmit -p ."
    ]
  }
}
